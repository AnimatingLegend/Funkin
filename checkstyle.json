    {
      "comment": "Specifies a specific naming format for public class member fields.",
      "props": {
        "format": "^[_a-zA-Z][a-z][a-zA-Z0-9]*$",
        "tokens": ["PUBLIC", "CLASS"]
      },
      "type": "MemberName"
